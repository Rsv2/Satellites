<Window x:Class="Satellites.Log"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Satellites"
        mc:Ignorable="d"
        Title="Log" Height="40" Width="260" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <TextBlock x:Name="txt" TextWrapping="Wrap" Text="{Binding Txt}" FontFamily="Segoe UI" FontSize="18" Margin="0,6,0,10" TextAlignment="Center"/>
    </Grid>
</Window>
